{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "eetezadi/click2share",
	"icon": "testimonial",
	"version": "1.2.0",
	"title": "Click 2 Share",
	"category": "widgets",
	"description": "Gutenberg Block Plugin to display a shareable post on Meta Threads, X (formely Twitter) or Reddit.",
	"keywords": [
		"social share",
		"click2share",
		"social media",
		"threads",
		"x",
		"Reddit",
		"tweet"
	],
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"post": {
			"type": "string",
			"source": "html",
			"selector": "p",
			"default": "Write your text here..."
		},
		"pageLink": {
			"type": "string"
		},
		"userName": {
			"type": "string"
		},
		"shareString": {
			"type": "string"
		},
		"linkLabel": {
			"type": "string"
		},
		"theme": {
			"type": "string"
		},
		"socialNetwork": {
			"type": "string"
		}
	},
	"styles": [
		{
			"name": "light",
			"label": "Light",
			"isDefault": true
		},
		{
			"name": "dark",
			"label": "Dark"
		}
	],
	"textdomain": "click-2-share",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
